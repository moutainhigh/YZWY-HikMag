<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--//=============================================================================//-->
            <!--我的信息-->
            <LinearLayout
                android:id="@+id/li_mineinfo_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/green_logo"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="12dp"
                    android:src="@drawable/social_head_default" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/green_logo"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="超级管理员"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="admin"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_right_arrow_white" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/v_setting_bar_line" />
            <!--//=============================================================================//-->
            <!--使用教程-->
            <LinearLayout
                android:id="@+id/li_useCourse_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/press_white_style"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="使用教程"
                    android:textColor="@color/balck_0"
                    android:textSize="15sp" />

                <include layout="@layout/arrow_right_setpage" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/v_setting_bar_line" />
            <!--//=============================================================================//-->

            <!--客服中心-->
            <LinearLayout
                android:id="@+id/li_customService_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_white_style"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="客服中心"
                    android:textColor="@color/balck_0"
                    android:textSize="15sp" />

                <include layout="@layout/arrow_right_setpage" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/v_setting_bar_line" />
            <!--//=============================================================================//-->
            <!--关于我们-->
            <LinearLayout
                android:id="@+id/li_aboutus_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/press_white_style"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="关于我们"
                    android:textColor="@color/balck_0"
                    android:textSize="15sp" />

                <include layout="@layout/arrow_right_setpage" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/v_setting_bar_line" />
            <!--//=============================================================================//-->
            <!--隐私协议-->
            <LinearLayout
                android:id="@+id/li_privacyProtocol_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_white_style"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="隐私协议"
                    android:textColor="@color/balck_0"
                    android:textSize="15sp" />

                <include layout="@layout/arrow_right_setpage" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/v_setting_bar_line" />

            <!--//=============================================================================//-->
            <!--检查更新-->
            <LinearLayout
                android:id="@+id/li_update_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/press_white_style"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="检查更新"
                    android:textColor="@color/balck_0"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/tv_verionnum_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="版本号 v0.1.1"
                    android:textColor="@color/balck_2"
                    android:textSize="13sp" />

                <include layout="@layout/arrow_right_setpage" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/v_setting_bar_line" />

            <!--//=============================================================================//-->
            <!--退出按钮-->
            <Button
                android:id="@+id/btn_loginOut_mine"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:text="退出登录"
                android:textColor="@color/red_t1"
                android:textSize="17sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>