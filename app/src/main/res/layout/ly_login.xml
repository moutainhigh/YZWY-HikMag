<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_40"
        android:layout_marginTop="@dimen/qb_px_20"
        android:background="@color/transparent"
        android:gravity="right">

        <Button
            android:id="@+id/btn_clode_lgn"
            android:layout_width="@dimen/qb_px_40"
            android:layout_height="@dimen/qb_px_40"
            android:layout_marginRight="@dimen/qb_px_10"
            android:background="@drawable/ic_close_balck_0" />
    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/qb_px_20"
                android:gravity="center"
                android:orientation="vertical">

                <com.example.yzwy.lprmag.view.CircleImageView
                    android:layout_width="@dimen/qb_px_100"
                    android:layout_height="@dimen/qb_px_100"
                    android:layout_margin="@dimen/qb_px_20"
                    android:src="@drawable/social_head_default" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="欢迎您的登录"
                    android:textColor="@color/green_logo"
                    android:textSize="@dimen/fs_px_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_45"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/qb_px_30"
                    android:layout_height="@dimen/qb_px_30"
                    android:layout_marginLeft="@dimen/qb_px_15"
                    android:background="@drawable/ic_phone"
                    android:scaleType="fitXY" />

                <EditText
                    android:id="@+id/edt_username_lgn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_45"
                    android:background="@null"
                    android:digits="@string/filter_vcode"
                    android:hint="请输入您的账号"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/qb_px_8"
                    android:paddingRight="@dimen/qb_px_15"
                    android:singleLine="true"
                    android:textSize="@dimen/fs_px_16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/qb_px_15"
                android:layout_marginTop="@dimen/qb_px_5"
                android:layout_marginRight="@dimen/qb_px_15"
                android:layout_marginBottom="@dimen/qb_px_10"
                android:background="#888888" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_45"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/qb_px_30"
                    android:layout_height="@dimen/qb_px_30"
                    android:layout_marginLeft="@dimen/qb_px_15"
                    android:background="@drawable/ic_pwd"
                    android:scaleType="fitXY" />

                <EditText
                    android:id="@+id/edt_pwd_lgn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qb_px_45"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/filter_vcode"
                    android:hint="请输入您的密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/qb_px_5"
                    android:paddingRight="@dimen/qb_px_5"
                    android:singleLine="true"
                    android:textSize="@dimen/fs_px_16" />

                <Button
                    android:id="@+id/btn_forget_lgn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_45"
                    android:layout_marginRight="@dimen/qb_px_15"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:text="忘记密码?"
                    android:textColor="@color/gray_8"
                    android:textSize="@dimen/fs_px_16" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/qb_px_15"
                android:layout_marginTop="@dimen/qb_px_5"
                android:layout_marginRight="@dimen/qb_px_15"
                android:layout_marginBottom="@dimen/qb_px_10"
                android:background="#888888" />


            <Button
                android:id="@+id/btn_login_lgn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_10"
                android:layout_marginRight="@dimen/qb_px_20"
                android:background="@drawable/green_btn"
                android:text="登陆"
                android:textColor="@color/white_bg"
                android:textSize="@dimen/fs_px_19" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>