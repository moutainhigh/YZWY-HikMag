<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/qb_px_15">

        <com.example.yzwy.lprmag.view.XCRoundRectImageView
            android:id="@+id/xcrimg_bg_cusservice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_130"
            android:scaleType="centerInside"
            android:src="@drawable/banner0x001" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_id_cusservice"
                android:layout_width="0dp"
                android:layout_height="0dp" />


            <TextView
                android:id="@+id/tv_customerServiceType_cusservice"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_130"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/qb_px_10"
                android:paddingTop="@dimen/qb_px_10"
                android:paddingBottom="@dimen/qb_px_10"
                android:text="客服电话："
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_px_20" />

            <TextView
                android:id="@+id/tv_customerService_cusservice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_130"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/qb_px_10"
                android:paddingRight="@dimen/qb_px_10"
                android:paddingBottom="@dimen/qb_px_10"
                android:text="400-022-0029"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_px_20" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>