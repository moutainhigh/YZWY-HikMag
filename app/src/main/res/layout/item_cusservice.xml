<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <com.example.yzwy.lprmag.view.XCRoundRectImageView
            android:id="@+id/xcrimg_bg_cusservice"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerInside"
            android:src="@drawable/banner0x001" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/tv_id_cusservice"
                android:layout_width="0dp"
                android:layout_height="0dp" />



            <TextView
                android:id="@+id/tv_customerServiceType_cusservice"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="客服电话："
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_customerService_cusservice"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="400-022-0029"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>