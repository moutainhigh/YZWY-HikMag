<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="地磁控制台管理"
            android:textColor="@color/white_f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_closePage_dialogPerset"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_close_white_f" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_e"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#73a3a3a3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_serialNumber_itPreset"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="序号"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <!--预置点-->
                <TextView
                    android:id="@+id/tv_persetNum_itpreset"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="预置点"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <!--地磁设备地址-->
                <TextView
                    android:id="@+id/tv_geomagneticAddress_itpreset"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="地磁地址"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="操作"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recv_item_setPreset"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/status_init"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="初始化"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/status_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="状态"
                    android:textColor="#d40505"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="预置点："
                        android:textColor="#ffffff"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/edt_putPreset_setPreset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="请输入预置点"
                        android:inputType="number"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="地磁地址："
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edt_putGeomagnetismAddressNumber_setPreset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:digits="@string/filter_vcode"
                        android:gravity="center"
                        android:hint="请输入地磁地址"
                        android:maxLength="8"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="14sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/btn_setPreset_setPreset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#72CB6F"
                    android:text="设置预置点"
                    android:textColor="#181717"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="优先级："
                        android:textColor="#ffffff"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/edt_priority_setPreset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:hint="请输入优先级"
                        android:inputType="number"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="14sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/btn_setpriority_setPreset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#72CB6F"
                    android:text="设置优先级"
                    android:textColor="#181717"
                    android:textSize="14sp" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</LinearLayout>