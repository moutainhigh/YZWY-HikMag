<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="地磁控制台管理"
            android:textColor="@color/white_f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_closePage_dialogPerset"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_close_white_f" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_e" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="#73a3a3a3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_serialNumber_itPreset"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="序号"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <!--预置点-->
                <TextView
                    android:id="@+id/tv_persetNum_itpreset"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="预置点"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <!--地磁设备地址-->
                <TextView
                    android:id="@+id/tv_geomagneticAddress_itpreset"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="地磁地址"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="操作"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recv_item_setPreset"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/status_init_dialogPreset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未连接"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/status_info_dialogPreset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="状态"
                    android:textColor="@color/gold"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="right"
                        android:text="预置点:"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/edt_putPreset_setPreset"
                        style="@style/EditTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:hint="请输入预置点"
                        android:inputType="number"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="13sp" />


                </LinearLayout>

                <View style="@style/HorizontalLineStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="right"
                        android:text="地磁地址:"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/edt_putGeomagnetismAddressNumber_setPreset"
                        style="@style/EditTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@null"
                        android:digits="@string/filter_vcode"
                        android:hint="请输入地磁地址"
                        android:maxLength="8"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />
                </LinearLayout>

                <View style="@style/HorizontalLineStyle" />

                <Button
                    android:id="@+id/btn_setPreset_setPreset"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:text="设置预置点"
                    android:textColor="#181717"
                    android:textSize="12sp" />


