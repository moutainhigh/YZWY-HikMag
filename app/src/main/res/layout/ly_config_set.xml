<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/green_logo"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_back_cfgset"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:id="@+id/rb_abcomp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="连接配置"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_f5data_cfgset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:padding="0dp"
            android:text="刷新"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="本机网络配置"
                android:textColor="@color/balck_1"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="IP地址："
                    android:textColor="@color/balck_1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_locIP_cfgset"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:digits="@string/filter_ip4"
                    android:hint="请输入IP4地址"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:textSize="16sp"></EditText>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#888888" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="Internet："
                    android:textColor="@color/balck_1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_wwwnet_cfgset"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="未连接"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="8dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="网络连接类型："
                    android:textColor="@color/balck_1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_nettype_cfgset"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="无线网"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="8dp"
                    android:textSize="16sp"></EditText>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#888888" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="海康网络配置"
                android:textColor="@color/balck_1"
                android:textSize="17sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="IP地址："
                    android:textColor="@color/balck_1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_hkIp_cfgset"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/filter_ip4"
                    android:hint="请输入IP4地址"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="端口号："
                    android:textColor="@color/balck_1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_hkport_cfgset"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入端口号"
                    android:inputType="number"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:textSize="16sp"></EditText>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#888888" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="用户名："
                    android:textColor="@color/balck_1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_hikusername_cfgset"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:digits="@string/filter_vcode"
                    android:hint="请输入4到11位的字符用户名"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:textSize="16sp"></EditText>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#888888" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="密     码："
                    android:textColor="@color/balck_1"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edt_hikpwd_cfgset"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:digits="@string/filter_vcode"
                    android:hint="请输入4到21位的字符密码"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:textSize="16sp"></EditText>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="#888888" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#888888" />

            <Button
                android:id="@+id/btn_enter_cfgset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="确认（需要重启应用）"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
