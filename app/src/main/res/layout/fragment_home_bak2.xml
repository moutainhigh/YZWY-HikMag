<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_about_banner"
        android:maxHeight="200dp"
        android:scaleType="centerInside" />


    <!-- 九宫格开始 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_f"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">

                <!--设备预览-->
                <LinearLayout
                    android:id="@+id/li_hik_frgmthome"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/press_home_menu_style"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_hik_frgmthome"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="设备调试"
                        android:src="@drawable/ic_tiaoshi" />

                    <TextView
                        android:id="@+id/tv_hik_frgmthome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="设备调试"
                        android:textColor="@color/balck_0"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--摄像头设备连接-->
                <LinearLayout
                    android:id="@+id/li_config_frgmthome"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/press_home_menu_style"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_config_frgmthome"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_config_app" />

                    <TextView
                        android:id="@+id/tv_config_frgmthome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="设备连接配置"
                        android:textColor="@color/balck_0"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--热点管理-->
                <LinearLayout
                    android:id="@+id/li_hotConfig_frgmthome"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/press_home_menu_style"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_hotConfig_frgmthome"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_hot_block" />

                    <TextView
                        android:id="@+id/tv_hotConfig_frgmthome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="热点管理"
                        android:textColor="@color/balck_0"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--终端数据管理-->
                <LinearLayout
                    android:id="@+id/li_termdatamag_frgmthome"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/press_home_menu_style"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_termdatamag_frgmthome"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_term_data_mag" />

                    <TextView
                        android:id="@+id/tv_termdatamag_frgmthome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="终端数据管理"
                        android:textColor="@color/balck_0"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
