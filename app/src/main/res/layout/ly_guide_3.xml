<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_guide_1x03" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/qb_px_40"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/page_three_go"
            android:layout_width="@dimen/qb_px_140"
            android:layout_height="@dimen/qb_px_50"
            android:layout_marginTop="@dimen/qb_px_20"
            android:layout_marginBottom="@dimen/qb_px_30"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/image_three_go"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="拍管家 - 引导页0x1x03"
            android:textColor="@color/green_logo"
            android:textSize="@dimen/fs_px_20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_15"
            android:gravity="center"
            android:text="广东精讯科技股份有限公司"
            android:textColor="@color/green_logo_2"
            android:textSize="@dimen/fs_px_12" />
    </LinearLayout>


</FrameLayout>