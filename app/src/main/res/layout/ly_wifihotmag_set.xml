<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/green_logo"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/imgbtn_back_wifihotmag"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/press_head_transparent_style"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_title_bar_back_btn_white" />

        <TextView
            android:id="@+id/tv_titleHead"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="终端热点管理"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_f5data_wifihotmag"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="刷新"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingBottom="75dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="本机网络配置（不可编辑）"
                        android:textColor="@color/balck_1"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text="IP地址："
                            android:textColor="@color/balck_1"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edt_locIP_wifihotmag"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:digits="@string/filter_ip4"
                            android:hint="请输入IP4地址"
                            android:maxLength="15"
                            android:maxLines="1"
                            android:singleLine="true" />
                    </LinearLayout>

                    <View
                        style="@style/HorizontalLineStyle"
                        android:layout_marginLeft="@dimen/space_30"
                        android:layout_marginRight="@dimen/space_30" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text="Internet："
                            android:textColor="@color/balck_1"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edt_wwwnet_wifihotmag"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="未连接"
                            android:inputType="phone"
                            android:maxLength="11" />
                    </LinearLayout>

                    <View
                        style="@style/HorizontalLineStyle"
                        android:layout_marginLeft="@dimen/space_30"
                        android:layout_marginRight="@dimen/space_30" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text="网络连接类型："
                            android:textColor="@color/balck_1"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edt_nettype_wifihotmag"
                            style="@style/EditTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:hint="无线网"
                            android:inputType="phone"
                            android:maxLength="11" />
                    </LinearLayout>

                    <View
                        style="@style/HorizontalLineStyle"
                        android:layout_marginLeft="@dimen/space_30"
                        android:layout_marginRight="@dimen/space_30" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="终端热点状态"
                            android:textColor="@color/balck_1"
                            android:textSize="17sp" />

                        <!--<com.example.yzwy.lprmag.view.SwitchButton-->
                        <!--android:id="@+id/swhbtn_wifihot_wifihotmag"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="@dimen/space_20"-->
                        <!--android:checked="true" />-->

                        <ImageButton
                            android:id="@+id/imgbtn_wifihot_wifihotmag"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_swhbtn_close" />

                        <TextView
                            android:id="@+id/tv_wifihotstatus_wifihotmag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="right"
                            android:text="打开中"
                            android:textColor="@color/balck_1"
                            android:textSize="15sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text="热点名称："
                            android:textColor="@color/balck_1"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edt_hikusername_wifihotmag"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="@string/filter_vcode"
                            android:hint="请输入4到11位的字符热点名称"
                            android:maxLength="50"
                            android:maxLines="1" />
                    </LinearLayout>

                    <View
                        style="@style/HorizontalLineStyle"
                        android:layout_marginLeft="@dimen/space_30"
                        android:layout_marginRight="@dimen/space_30" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text="热点密码："
                            android:textColor="@color/balck_1"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edt_hikpwd_wifihotmag"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="@string/filter_vcode"
                            android:hint="请输入4到21位的字符密码"
                            android:maxLength="50"
                            android:maxLines="1" />
                    </LinearLayout>

                    <View
                        style="@style/HorizontalLineStyle"
                        android:layout_marginLeft="@dimen/space_30"
                        android:layout_marginRight="@dimen/space_30" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <Button
            android:id="@+id/btn_enter_wifihotmag"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="确认（需要重启本地应用和终端）" />
    </FrameLayout>


</LinearLayout>