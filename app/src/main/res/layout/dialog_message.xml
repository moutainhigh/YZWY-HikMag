<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_logo"
        android:gravity="center"
        android:paddingTop="@dimen/qb_px_5"
        android:paddingBottom="@dimen/qb_px_5"
        android:text="提示"
        android:textColor="@color/white"
        android:textSize="@dimen/fs_px_20" />


    <TextView
        android:id="@+id/tv_dialog_message_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_marginRight="@dimen/qb_px_10"
        android:layout_marginBottom="@dimen/qb_px_15"
        android:gravity="center"
        android:paddingTop="@dimen/qb_px_10"
        android:paddingBottom="@dimen/qb_px_10"
        android:text="亲，请联系客服重置密码哟~"
        android:textColor="@color/balck_4"
        android:textSize="@dimen/fs_px_14" />

    <View
        android:id="@+id/v_dialog_message_line"
        android:layout_width="@dimen/dialog_line_size"
        android:layout_height="1dp"
        android:background="@color/dialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_dialog_message_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_45"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginRight="@dimen/qb_px_1"
            android:layout_weight="1"
            android:background="@color/green_logo_2"
            android:text="取消"
            android:textColor="@color/balck_0"
            android:textSize="@dimen/fs_px_14" />

        <Button
            android:id="@+id/tv_dialog_message_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_45"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="@dimen/qb_px_1"
            android:layout_weight="1"
            android:background="@color/green_logo_2"
            android:text="确认"
            android:textColor="@color/balck_0"
            android:textSize="@dimen/fs_px_14" />
    </LinearLayout>


</LinearLayout>