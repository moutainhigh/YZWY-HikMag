<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_serialNumber_itPreset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="999"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!--预置点-->
        <TextView
            android:id="@+id/tv_persetNum_itpreset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="预置点000"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!--地磁设备地址-->
        <TextView
            android:id="@+id/tv_geomagneticAddress_itpreset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="预置点000"
            android:textColor="#ffffff"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_goto_itPreset"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="转到"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_setPreset_itPreset"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="设置"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_delete_itPreset"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/gray_9" />

</LinearLayout>