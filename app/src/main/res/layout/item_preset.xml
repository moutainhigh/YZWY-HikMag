<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_serialNumber_itPreset"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!--预置点-->
        <TextView
            android:id="@+id/tv_persetNum_itpreset"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!--地磁设备地址-->
        <TextView
            android:id="@+id/tv_geomagneticAddress_itpreset"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="00000000"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!--宽度比-->
        <TextView
            android:id="@+id/tv_scwidth_itpreset"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <!--高度比-->
        <TextView
            android:id="@+id/tv_scheight_itpreset"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_goto_itPreset"
                style="@style/ButtonStyle"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:padding="0dp"
                android:text="转到"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_setPreset_itPreset"
                style="@style/ButtonStyle"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:padding="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="设置"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_delete_itPreset"
                style="@style/ButtonStyle"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:padding="0dp"
                android:background="@color/red_t1"
                android:text="删除"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/gray_9" />

</LinearLayout>