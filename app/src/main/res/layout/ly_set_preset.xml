<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recv_item_setPreset"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/SetImageView"
            android:layout_width="@dimen/qb_px_100"
            android:layout_height="@dimen/qb_px_50"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_20"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="预置点："
                android:textColor="#ffffff" />


            <EditText
                android:id="@+id/edt_putPreset_setPreset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="设置预置点"
                android:inputType="number"
                android:text="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="地磁地址："
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/edt_putGeomagnetismAddressNumber_setPreset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="请输入地磁地址"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />

            <Button
                android:id="@+id/btn_setPreset_setPreset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_8"
                android:layout_marginRight="@dimen/qb_px_8"
                android:background="#72CB6F"
                android:text="设置预置点"
                android:textColor="#181717" />

            <Button
                android:id="@+id/btn_clearPreset_setPreset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#4b0d13"
                android:text="清除预置点"
                android:textColor="#f4f4f4" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_goTo_setPreset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_55"
            android:layout_marginLeft="@dimen/qb_px_8"
            android:layout_marginTop="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_8"
            android:layout_marginBottom="@dimen/qb_px_8"
            android:background="#72CB6F"
            android:ems="10"
            android:gravity="center"
            android:text="转到预置点"
            android:textColor="#181717" />

    </LinearLayout>

    <!--</ScrollView>-->

</LinearLayout>
